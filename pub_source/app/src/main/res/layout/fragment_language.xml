
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/TextColor.White"
    android:layout_margin="8dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_album_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/create_language">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Language"
                android:id="@+id/tx"
                android:fontFamily="@font/kaushanscriptregular"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="#6C0D0D"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <EditText
                    android:id="@+id/n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kaushanscriptregular"
                    android:hint="Enter Language Name"
                    android:textColor="#6C0D0D"
                    android:textSize="16dp"
                    />

                <Button
                    android:id="@+id/e1"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:text="Add"
                    android:fontFamily="@font/kaushanscriptregular"
                    />

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_add_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD NEW"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor= "#FEFDFC  "
                    />
            </LinearLayout>
        </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:layout_above="@+id/submit"
                    />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="#FEFDFC"
            android:textSize="12dp"
            android:text="Submit"
            android:fontFamily="@font/kaushanscriptregular"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
