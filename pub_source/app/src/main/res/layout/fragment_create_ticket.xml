<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <android.support.v7.widget.CardView
        android:background="@color/TextColor.White"
        android:layout_margin="8dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/top"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/create_ticket">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create New Ticket"
                        android:id="@+id/tx"
                        android:fontFamily="@font/kaushanscriptregular"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="#030303"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <TextView
                            android:id="@+id/n1"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kaushanscriptregular"
                            android:text="Ticket Name"
                            android:textColor="#6C0D0D"
                            android:textSize="16dp"
                            />

                        <EditText
                            android:id="@+id/e1"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="12dp"
                            />

                    </LinearLayout>
                    <LinearLayout

                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/n2"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kaushanscriptregular"
                            android:text="Price"
                            android:textColor="#6C0D0D"
                            android:textSize="16dp"
                            />
                        <EditText
                            android:id="@+id/e2"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="12dp"
                            android:inputType="number"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/nw"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kaushanscriptregular"
                            android:text="Title"
                            android:textColor="#6C0D0D"
                            android:textSize="16dp"
                            />
                        <EditText
                            android:id="@+id/e11"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="12dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/n19"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kaushanscriptregular"
                            android:text="Description"
                            android:textColor="#6C0D0D"
                            android:textSize="16dp"
                            />

                        <EditText
                            android:id="@+id/e1f"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="12dp"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CREATE"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textColor= "#FEFDFC  "
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bt_add_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADD NEW"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textColor= "#FEFDFC  "
                        />
                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_above="@+id/submit"
                />
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#FEFDFC"
                android:textSize="12dp"
                android:text="Submit"
                android:fontFamily="@font/kaushanscriptregular"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>


