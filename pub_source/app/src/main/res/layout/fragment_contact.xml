<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <android.support.v7.widget.CardView
        android:background="@color/TextColor.White"
        android:layout_margin="8dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/create_contact">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Contacts"
                    android:id="@+id/tx"
                    android:fontFamily="@font/kaushanscriptregular"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="#030303"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <TextView
                        android:id="@+id/n1"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kaushanscriptregular"
                        android:text="name"
                        android:textColor="#6C0D0D"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        />

                </LinearLayout>
                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/n2"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kaushanscriptregular"
                        android:text="Phone Number1 "
                        android:textColor="#6C0D0D"
                        android:textSize="16dp"
                        />
                    <EditText
                        android:id="@+id/phone1"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:inputType="number"
                        />


                </LinearLayout>
                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/n2v"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kaushanscriptregular"
                        android:text="Phone Number2 "
                        android:textColor="#6C0D0D"
                        android:textSize="16dp"
                        />
                    <EditText
                        android:id="@+id/phone2"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:inputType="number"
                        />


                </LinearLayout>
                <LinearLayout

                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/n2vv"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kaushanscriptregular"
                        android:text="email id "
                        android:textColor="#6C0D0D"
                        android:textSize="16dp"
                        />
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        />


                </LinearLayout>
                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor= "#FEFDFC  "
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Contact"
                    android:id="@+id/tx1"
                    android:fontFamily="@font/kaushanscriptregular"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="#6C0D0D"
                    android:layout_marginTop="150dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/spinner_title"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_add_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD NEW"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor= "#FEFDFC  "
                    />
            </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_above="@+id/submit"
                />
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor= "#FEFDFC  "
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>

