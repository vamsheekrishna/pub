<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pub.com.mypub.home.ConfirmDateTimeFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bg"
            >


<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
            android:src="@drawable/date_time"
            android:layout_alignParentRight="true"
            android:id="@+id/rr"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="230dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/event"
                android:textAlignment="center"
                android:text="Confirm Date and Time"
                android:textSize="20dp"
                android:textColor= "#8655CB  "
                android:paddingBottom="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
               android:layout_marginLeft="8dp"
                android:fontFamily="@font/kaushanscriptregular"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="sat 27 Oct"
                android:layout_below="@+id/event"
                android:layout_toRightOf="@+id/detee"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/k"
                android:background="@drawable/time"
                android:textColor= "#E89A31  "
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="sat 29 Dec"
                android:layout_below="@+id/event"
                android:layout_toRightOf="@+id/k"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/b2"
                android:background="@drawable/time"
                android:textColor= "#E89A31  "/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="Mon 31 Dec"
                android:layout_below="@+id/event"
                android:layout_toRightOf="@+id/b2"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/b3"
                android:background="@drawable/time"
                android:textColor= "#E89A31  "/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="Wed 28 Nov"
                android:layout_below="@+id/event"
                android:layout_toRightOf="@+id/b3"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/b4"
                android:background="@drawable/time"
                android:textColor= "#E89A31 "/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="6:00 pm"
                android:layout_below="@+id/k"
                android:layout_toRightOf="@+id/detee"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/t0"
                android:background="@drawable/time"
                android:textColor= "#E89A31  "
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="4:00pm"
                android:layout_below="@+id/k"
                android:layout_toRightOf="@+id/k"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/t11"
                android:background="@drawable/time"
                android:textColor= "#E89A31 "/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="9:00 am"
                android:layout_below="@+id/k"
                android:layout_toRightOf="@+id/b2"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/t22"
                android:background="@drawable/time"
                android:textColor= "#E89A31"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="8:00 pm"
                android:layout_below="@+id/k"
                android:layout_toRightOf="@+id/b3"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/t33"
                android:background="@drawable/time"
                android:textColor= "#E89A31"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/select"
                android:layout_below="@+id/event"
                android:id="@+id/detee"

                android:layout_marginLeft="10dp"/>
<TextView
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:text="Select Date and Time"
    android:fontFamily="@font/kaushanscriptregular"
    android:layout_below="@+id/detee"
    android:layout_marginLeft="16dp"
    android:textSize="12dp"
    android:textAlignment="center"
    />


            <!--<Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/t"
                android:text="6:00 PM"
                android:textSize="8dp"
                android:layout_below="@+id/detee"
                android:textColor= "#030303  "
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/time"
                android:layout_marginBottom="8dp"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:hint="Display Date and Time"
                android:layout_below="@+id/t33"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kaushanscriptregular"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
