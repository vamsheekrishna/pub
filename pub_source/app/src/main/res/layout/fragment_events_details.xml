<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <android.support.v7.widget.CardView
        android:background="@color/TextColor.White"
        android:layout_margin="8dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/event"
                    android:textAlignment="center"
                    android:text="Sensation 'The Wrld's leading dance event'"
                    android:textSize="22dp"
                    android:textColor= "#8655CB  "
                    android:fontFamily="@font/kaushanscriptregular"/>
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electronic and Dance | English | 6hrs 30mins | Age 15+"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_below="@+id/event"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/chunkfive"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detee"
                    android:text="sat 27 Oct"
                    android:textSize="15dp"
                    android:layout_below="@+id/detail"
                    android:layout_marginTop="16dp"
                    android:textColor= "#AB3D24"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:text="3,000 Onwards"
                    android:textSize="15dp"
                    android:layout_below="@+id/detee"

                    android:textColor= "#AB3D24"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail1"
                    android:text="G.M.C Balayogi Athletic Stadium:Hydwrabad"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:layout_below="@+id/price"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/kaushanscriptregular"
                    />

            </RelativeLayout>
            <include layout="@layout/fragment_about_event">

            </include>

    </LinearLayout>
        </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>
