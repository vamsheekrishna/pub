<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/TextColor.White"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:layout_constraintCircleRadius="@dimen/card_album_radius">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_view"
            android:src="@drawable/event"
            android:scaleType="centerInside"
            />
        <RelativeLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/date_layout"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/month"
                    android:text="OCT"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day"
                    android:text="27 SAT"
                    android:textColor= "#3689CE  "
                    android:textSize="16sp"/>
                <TextView
                    android:textSize="10sp"
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"/>
            </LinearLayout>
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/view_right"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESERVE"
                    android:textColor="#5076CD "
                    android:background="#CAF3F5  "
                    android:id="@+id/book"/>
            </LinearLayout>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/date_layout"
                android:layout_toStartOf="@+id/view_right"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event"
                    android:textSize="24sp"
                    android:text="Dancing Event"
                    android:textColor= "#AB3D24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail"
                    android:textSize="16sp"
                    android:text="G.M.C Balayogi:Hydwrabad"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:textSize="10sp"
                    android:text="1000rs On words"
                    android:textColor= "#AB3D24"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>