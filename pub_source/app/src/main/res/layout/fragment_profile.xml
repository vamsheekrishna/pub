<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pub.com.mypub.authentication.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="true">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDF3F7  "
           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/yy"
               android:layout_centerHorizontal="true"
                android:id="@+id/rr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to Upload your photo"
                android:layout_below="@+id/rr"
                android:textSize="23dp"
                android:textColor="@android:color/white"
                />




        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body"
            android:background="#F7E1FA   "

            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n2"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e2"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n3"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="House No"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e3"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n4"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e4"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n5"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="state"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e5"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/n6"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e6"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/n7"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Pin code"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/e7"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Lat/Long"
                android:layout_gravity="center"
                android:id="@+id/b1"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:layout_gravity="center"
                android:id="@+id/b2"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>


</FrameLayout>
